<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E3EEF1"
    app:cardBackgroundColor="#E3EEF1"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="182dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_card"
        android:foregroundGravity="top"
        android:radius="50dp">

        <TextView
            android:id="@+id/dreamCardText"
            android:layout_width="159dp"
            android:layout_height="147dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-condensed"
            android:foregroundGravity="fill_vertical"
            android:gravity="center_vertical"
            android:text="cardText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dreamCardImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dreamCardImage"
            android:layout_width="168dp"
            android:layout_height="182dp"
            android:layout_marginStart="192dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shape_incoming_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_foreground" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>